{% extends 'PointWebAdminBundle::base.html.twig' %}

{% block  content_right %}
    <div class="panel panel-info">
        <div class="panel-heading">Object</div>
        <div class="panel-body">
            {{ entity.object }}
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Auteur</div>
        <div class="panel-body">
            {{ entity.addresser }}
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Date d'envoie</div>
        <div class="panel-body">
            {{ entity.sendDate|date("d-m-Y") }}
        </div>
    </div>
    <div class="panel panel-info">
        <div class="panel-heading">Message</div>
        <div class="panel-body">
            {{ entity.message|raw }}
        </div>
    </div>

    <a href="{{ path('admin_newsletter') }}" class="btn btn-primary"><i class="fa fa-arrow-circle-left"></i> Retour
        Ã  la liste</a>
    <a href="{{ path('admin_newsletter_edit', { 'id': entity.id }) }}" class="btn btn-primary"><i
                class="fa fa-pencil"></i>
        Modifier</a>
    {{ form(delete_form) }}
{% endblock %}
